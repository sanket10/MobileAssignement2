<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroud1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.happy.primeno.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Question"
        android:textStyle="bold"
        android:id="@+id/question"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/yes"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="RESTART"
        android:id="@+id/restart"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:text="YES"
        android:id="@+id/yes"
        android:textStyle="bold"
        android:layout_alignTop="@+id/no"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:text="NO"
        android:textStyle="bold"
        android:id="@+id/no"
        android:layout_above="@+id/next"
        android:layout_toEndOf="@+id/next" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="NEXT"
        android:textStyle="bold"
        android:id="@+id/next"
        android:layout_above="@+id/restart"
        android:layout_toEndOf="@+id/yes"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:text="Starts by click next"
        android:textStyle="bold"
        android:id="@+id/status"
        android:layout_alignTop="@+id/question"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:textStyle="bold"
        android:layout_below="@+id/no"
        android:layout_alignStart="@+id/status"
        android:id="@+id/hint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheat"
        android:id="@+id/cheat"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/hint" />
</RelativeLayout>
